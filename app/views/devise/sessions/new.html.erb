<div class="login-page">
  <div class="container">
    <div class="login-logo txt-center">
      <%= image_tag("logo.svg", :alt => "Health Chain") %>
      <p class="white heading-font">Health Chain</p>
    </div>
    <h2 class="login-title txt-center txt-lvl-4 txt-font white">Login 
      <span class="kinda-white">/ <%= link_to "Sign Up", new_registration_path(resource_name) %></span>
    </h2>
    <div class="login-form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <i class="zmdi zmdi-email"></i>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "Email Address" , autocomplete: "off"%>
        </div>

        <div class="field">
          <i class="zmdi zmdi-lock"></i>
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password", autocomplete: "off" %>
        </div>
        <p class="pd-t-2 kinda-white txt-lvl-2 txt-center txt-font"><%= link_to "Forgot Password?", new_password_path(resource_name) %></p>
        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>
    </div>
  </div>
</div>