<div class="login-page">
  <div class="container">
    <div class="login-logo txt-center">
      <%= image_tag("logo.svg", :alt => "Health Chain") %>
      <p class="white heading-font">Health Chain</p>
    </div>
    <h2 class="login-title txt-center txt-lvl-4 txt-font white">
      <span class="kinda-white"><%= link_to "Login", new_session_path(resource_name) %> / </span>
      sign Up
    </h2>
    <div class="login-form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <i class="zmdi zmdi-email"></i>
        <%= f.email_field :email, autofocus: true, autocomplete: "off", placeholder: "Email Address", autocomplete: "off" %>
      </div>

      <div class="field">
        <i class="zmdi zmdi-lock"></i>
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
      </div>

      <div class="field">
        <i class="zmdi zmdi-lock"></i>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" %>
      </div>
      <p class="pd-t-2 kinda-white txt-lvl-2 txt-center txt-font">Password should be at least 6 character</p>
      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
